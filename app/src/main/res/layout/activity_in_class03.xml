<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".in_class_03">

    <EditText
        android:id="@+id/editTextTextPersonNameF"
        android:layout_width="378dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextEmailF"
        android:layout_width="378dp"
        android:layout_height="53dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iUseTextViewF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="I use"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectAvatarImageViewF" />

    <RadioGroup
        android:id="@+id/radioGroupF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/iUseTextViewF"
        app:layout_constraintTop_toBottomOf="@+id/iUseTextViewF">

        <RadioButton
            android:id="@+id/androidRadioButtonF"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="Android"
            android:textSize="17dp"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/iOSRadioButtonF"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:text="iOS"
            android:textSize="17dp"
            tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>

    <SeekBar
        android:id="@+id/seekBarF"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="298dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="3"
        android:progress="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentMoodTextViewF" />

    <TextView
        android:id="@+id/currentMoodTextViewF"
        android:layout_width="361dp"
        android:layout_height="25dp"
        android:layout_marginTop="125dp"
        android:text="Your current mood: Happy"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@+id/iUseTextViewF"
        app:layout_constraintTop_toTopOf="@+id/iUseTextViewF" />

    <ImageView
        android:id="@+id/imageView2F"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/seekBarF"
        app:layout_constraintTop_toBottomOf="@+id/currentMoodTextViewF"
        app:srcCompat="@drawable/happy" />

    <Button
        android:id="@+id/profileSubmitButtonF"
        android:layout_width="145dp"
        android:layout_height="47dp"
        android:layout_marginTop="275dp"
        android:text="@string/inClass03SubmitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectAvatarImageViewF"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/selectAvatarImageViewF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/select_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailF" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/avatarSelectFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/displayFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>