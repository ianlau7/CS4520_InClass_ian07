<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/inClass01Button"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:text="@string/inClass01Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/purple_700" />

    <Button
        android:id="@+id/inClass02Button"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:text="In Class 02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inClass01Button"
        app:rippleColor="@color/purple_700" />

    <Button
        android:id="@+id/inClass03Button"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:text="In Class 03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inClass02Button"
        app:rippleColor="@color/purple_700" />

    <Button
        android:id="@+id/inClass05Button"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:text="In Class 05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inClass04Button"
        app:rippleColor="@color/purple_700" />

    <Button
        android:id="@+id/inClass06Button"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:text="In Class 06"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inClass05Button"
        app:rippleColor="@color/purple_700" />

    <Button
        android:id="@+id/inClass04Button"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:text="In Class 04"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inClass03Button"
        app:rippleColor="@color/purple_700" />

</androidx.constraintlayout.widget.ConstraintLayout>