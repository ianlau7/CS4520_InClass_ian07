<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootRowView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/descriptionDisplayTextView"
        android:layout_width="381dp"
        android:layout_height="204dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/datePublishedDisplayTextView"
        app:layout_constraintStart_toStartOf="@+id/datePublishedTextView"
        app:layout_constraintTop_toBottomOf="@+id/datePublishedDisplayTextView" />

    <TextView
        android:id="@+id/titleDisplayTextView"
        android:layout_width="384dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Author:"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/titleDisplayTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleDisplayTextView" />

    <TextView
        android:id="@+id/datePublishedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Date Published:"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/authorTextView"
        app:layout_constraintTop_toBottomOf="@+id/authorTextView" />

    <TextView
        android:id="@+id/authorDisplayTextView"
        android:layout_width="327dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/authorTextView"
        app:layout_constraintTop_toTopOf="@+id/authorTextView" />

    <TextView
        android:id="@+id/datePublishedDisplayTextView"
        android:layout_width="272dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/datePublishedTextView"
        app:layout_constraintTop_toTopOf="@+id/datePublishedTextView" />

    <ImageView
        android:id="@+id/newsImageView"
        android:layout_width="314dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/descriptionDisplayTextView"
        app:layout_constraintStart_toStartOf="@+id/descriptionDisplayTextView"
        app:layout_constraintTop_toBottomOf="@+id/descriptionDisplayTextView"
        app:srcCompat="@drawable/earthglobe" />

</androidx.constraintlayout.widget.ConstraintLayout>